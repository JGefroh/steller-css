{
  "name": "steller-css",
  "version": "0.1.3-alpha.0",
  "description": "A functional CSS framework for creating design systems",
  "main": "index.js",
  "author": "TJ Hillard",
  "license": "MIT",
  "scripts": {
    "build": "sass --update src/index.scss:dist/index.css",
    "build-test": "sass --update __test__/index.scss:__test__/index.css",
    "test": "yarn build-test && jest --env=jsdom --verbose",
    "lint": "eslint __test__ --ext .js && stylelint stylelint 'src/**/*.scss'",
    "lint:fix": "eslint __test__ --ext .js --fix && stylelint stylelint 'src/**/*.scss' --fix"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "sass": "^1.19.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  }
}
